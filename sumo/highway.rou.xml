<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Vehicle type with custom car image (if images are available) -->
    <!-- To use custom images, uncomment imgFile and place car images in sumo/vehicles/ directory -->
    <!-- <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="33.33" guiShape="passenger" imgFile="vehicles/car_red.png"/> -->
    
    <!-- Vehicle type with better built-in shape (looks more like a car than arrows) -->
    <!-- Valid guiShape options: passenger, truck, bus, motorcycle, bicycle, pedestrian, etc. -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="33.33" guiShape="passenger"/>
    
    <!-- Route definition must come before vehicles -->
    <route id="highway_route" edges="highway"/>
    
    <!-- Leading vehicle (front car) - Red color -->
    <vehicle id="car_leading" type="car" route="highway_route" depart="0" departLane="0" departPos="100" departSpeed="25" color="255,0,0"/>
    
    <!-- Following vehicle (rear car) - Blue color, starts closer to trigger distance monitoring -->
    <vehicle id="car_following" type="car" route="highway_route" depart="0" departLane="0" departPos="50" departSpeed="30" color="0,0,255"/>
</routes>

